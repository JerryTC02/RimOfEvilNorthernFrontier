  <ThingDef ParentName="HatMakeableBaseNordbergChild">
    <defName>Apparel_ROE_NordbergBoyHood</defName>
    <label>Nordbergian Boys Hood</label>
    <description>A small furlined hood for young nordbergian boys to keep them warm in the harsh winter winds.</description>
	<techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Things/Apparel/NordbergchildM/Hood/NordbergchildMHood</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>0.65</drawSize>
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <statBases>
      <WorkToMake>2150</WorkToMake>
      <MaxHitPoints>125</MaxHitPoints>
      <Mass>0.35</Mass>
      <Flammability>0.8</Flammability>
      <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.09</ArmorRating_Blunt>
      <ArmorRating_Heat>0.24</ArmorRating_Heat>
      <Insulation_Cold>30</Insulation_Cold>
      <Insulation_Heat>0</Insulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <recipeMaker>
	  <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
      <displayPriority>50001</displayPriority>
    </recipeMaker>
	<costList>
	  <Leather_Heavy>25</Leather_Heavy>
    </costList>
    <apparel>
		    <drawData>
                <dataSouth>
                </dataSouth>
                <dataWest>
                </dataWest>
                <dataEast>
                </dataEast>
                <dataNorth>
				    <layer>95</layer>
                </dataNorth>
            </drawData>
	  <gender>Male</gender>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/NordbergchildM/Hood/NordbergchildMHood</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
    </apparel>
  </ThingDef>
  
