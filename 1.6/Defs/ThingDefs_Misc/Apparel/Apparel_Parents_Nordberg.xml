<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <ThingDef Name="ApparelNordbergMakeableBase" ParentName="ApparelBase" Abstract="True">
    <recipeMaker>
	  <researchPrerequisite>ROE_Nordberg</researchPrerequisite>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
          <li MayRequire="Ludeon.RimWorld.Anomaly">Bioferrite</li>
          <li MayRequire="Ludeon.RimWorld.Odyssey">Obsidian</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
    <tradeTags>
      <li>NordbergApparel</li>
    </tradeTags>
  </ThingDef>
  
  <ThingDef Name="HatMakeableBaseNordberg" ParentName="ApparelNordbergMakeableBase" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <apparel>
      <parentTagDef>ApparelHead</parentTagDef>
    </apparel>
  </ThingDef>

  <ThingDef Abstract="True" Name="ChildNordbergApparelMakeableBase" ParentName="ApparelNordbergMakeableBase">
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <apparel>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <developmentalStageFilter>Child</developmentalStageFilter>
    </apparel>
  </ThingDef>
  
  <ThingDef Name="HatMakeableBaseNordbergChild" ParentName="ChildNordbergApparelMakeableBase" Abstract="True">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <apparel>
      <parentTagDef>ApparelHead</parentTagDef>
    </apparel>
  </ThingDef>

</Defs>