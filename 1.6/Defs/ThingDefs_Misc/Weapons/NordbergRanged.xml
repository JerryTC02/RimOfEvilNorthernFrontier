<?xml version="1.0" encoding="utf-8" ?>

<Defs>

  <ThingDef ParentName="NordbergBaseHumanMakeableRanged">
    <defName>Nordberg_ROE_Harpoon</defName>
    <label>Hunting Harpoons</label>
    <description>Large throwing harpoons used by the hunter tribes of the north, intended to wound and bleed out larger prey.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/HunterHarpoon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1</drawSize>
    </graphicData>
    <soundInteract>Interact_BeatFire</soundInteract>
    <costList>
      <WoodLog>60</WoodLog>
	  <Steel>15</Steel>
    </costList>
    <statBases>
      <WorkToMake>9750</WorkToMake>
      <Mass>5</Mass>
      <AccuracyTouch>0.82</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.35</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
	<equippedAngleOffset>45</equippedAngleOffset>
	<equippedStatOffsets>
	 <HuntingStealth>0.05</HuntingStealth>
	 <FishingSpeed MayRequire="Ludeon.RimWorld.Odyssey">0.1</FishingSpeed>
    </equippedStatOffsets>
    <weaponTags>
      <li>NeolithicRangedHeavy</li>
    </weaponTags>
    <weaponClasses>
      <li>Ranged</li>
    </weaponClasses>
    <recipeMaker>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>90001</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>NordbergHarpoon_Thrown</defaultProjectile>
        <warmupTime>3.2</warmupTime>
        <range>16.9</range>
        <soundCast>Interact_BeatFire</soundCast>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <tools>
      <li>
        <label>shaft</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
         <cooldownTime>1.9</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>14</power>
         <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>NordbergHarpoon_Thrown</defName>
    <label>harpoon</label>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/HunterHarpoon_Projectile</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>RangedStab</damageDef>
      <damageAmountBase>28</damageAmountBase>
      <stoppingPower>3.5</stoppingPower>
      <armorPenetrationBase>0.20</armorPenetrationBase>
      <speed>33</speed>
    </projectile>
  </ThingDef>

</Defs>