  <ThingDef ParentName="AnimalThingBase">
    <defName>Nordberg_ROE_Seal</defName>
    <label>Nordbergian Seal</label>
    <description>An unusual species of seal that possesses tusks and an aggressive nature. Young individuals barely resemble their parents, possessing a pure white fur coat and large eyes that many find adorable, and others find extremely unnerving.</description>
    <statBases>
      <MoveSpeed>2.1</MoveSpeed>
      <MarketValue>315</MarketValue>
      <ComfyTemperatureMin>-55</ComfyTemperatureMin>
      <FilthRate>16</FilthRate>
      <Wildness>0.75</Wildness>
    </statBases>
    <tools>
      <li>
        <label>tusk</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>10.7</power>
        <cooldownTime>2.5</cooldownTime>
        <linkedBodyPartsGroup>TuskAttackTool</linkedBodyPartsGroup>
      </li>
      <li>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
        <chanceFactor>0.7</chanceFactor>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
        <chanceFactor>0.2</chanceFactor>
      </li>
    </tools>
    <race>
      <body>PinnipedWithTusks_Nordberg</body>
      <herdAnimal>true</herdAnimal>
      <baseBodySize>2.3</baseBodySize>
      <baseHealthScale>1.45</baseHealthScale>
      <baseHungerRate>0.60</baseHungerRate>
      <foodType>CarnivoreAnimal</foodType>
      <trainability>None</trainability>
      <leatherDef>Leather_Heavy</leatherDef>
      <gestationPeriodDays>7.66</gestationPeriodDays>
      <waterSeeker>true</waterSeeker>
      <waterCellCost>1</waterCellCost>
      <manhunterOnDamageChance>0.75</manhunterOnDamageChance>
      <manhunterOnTameFailChance>0.1</manhunterOnTameFailChance>
      <canFishForFood>true</canFishForFood>
	    <crossAggroWith>
         <li>Nordberg_ROE_Yeti</li>
        </crossAggroWith>
	  	<wildBiomes>
				<Tundra>0.10</Tundra>
				<IceSheet>0.31</IceSheet>
				<SeaIce>0.30</SeaIce>
				<GlacialPlain MayRequire="Ludeon.RimWorld.Odyssey">0.30</GlacialPlain>
		</wildBiomes>
      <litterSizeCurve>
        <points>
          <li>(0.5, 0)</li>
          <li>(1, 1)</li>
          <li>(1.5, 1)</li>
          <li>(2.0, 0)</li>
        </points>
      </litterSizeCurve>
      <lifeExpectancy>10</lifeExpectancy>
      <lifeStageAges>
        <li>
          <def>AnimalBaby</def>
          <minAge>1.9</minAge>
		  <soundDeath>Pawn_ROE_SealBaby_Death</soundDeath>
        </li>
        <li>
          <def>AnimalJuvenile</def>
          <minAge>2</minAge>
        </li>
        <li>
          <def>AnimalAdult</def>
          <minAge>2.5</minAge>
          <soundWounded>Pawn_ROE_Seal_Wounded</soundWounded>
          <soundDeath>Pawn_ROE_Seal_Death</soundDeath>
          <soundCall>Pawn_ROE_Seal_Call</soundCall>
        </li>
      </lifeStageAges>
      <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
      <soundEating>Herbivore_Eat</soundEating>
      <headPosPerRotation>
        <li>(0.0, 0, 0.4)</li>
        <li>(0.27, 0, 0.18)</li>
        <li>(0.0, 0, 0.1)</li>
        <li>(-0.27, 0, 0.18)</li>
      </headPosPerRotation>
    </race>
    <tradeTags>
      <li>AnimalUncommon</li>
    </tradeTags>
